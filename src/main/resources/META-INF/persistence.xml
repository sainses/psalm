<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="psalm-data" transaction-type="JTA">
    <jta-data-source>jdbc/com.sainses.psalm</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation.output-mode" value="both"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="DEFAULT_PU" transaction-type="JTA">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>com.sainses.psalm.ent.EffortRecord</class>
    <class>com.sainses.psalm.ent.Project</class>
    <class>com.sainses.psalm.ent.ProjectRole</class>
    <class>com.sainses.psalm.ent.ProjectStatus</class>
    <class>com.sainses.psalm.ent.Resource</class>
    <class>com.sainses.psalm.ent.SysRole</class>
    <class>com.sainses.psalm.ent.SysUser</class>
    <class>com.sainses.psalm.ent.Task</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
